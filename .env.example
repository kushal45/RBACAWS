# ==============================================
# RBAC AWS Monorepo - Shared Environment Configuration
# ==============================================
# This file contains shared environment variables that might be used across services
# Copy this to .env and customize for your development environment
# For production, use service-specific .env files in each app directory

# ==============================================
# SHARED DATABASE CONFIGURATION
# ==============================================
# Shared database instance (can be overridden in service-specific .env files)
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_database_name

# ==============================================
# SHARED REDIS CONFIGURATION
# ==============================================
# Shared Redis instance (different databases for different services)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ==============================================
# SHARED SECURITY CONFIGURATION
# ==============================================
# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-in-production
REFRESH_TOKEN_EXPIRES_IN=30d

# Password Security
BCRYPT_SALT_ROUNDS=12

# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
NODE_ENV=development

# ==============================================
# SERVICE PORTS
# ==============================================
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3200
RBAC_CORE_PORT=3100
AUDIT_LOG_SERVICE_PORT=3300

# ==============================================
# SHARED LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=debug

# ==============================================
# SHARED CORS CONFIGURATION
# ==============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# ==============================================
# MONITORING & OBSERVABILITY
# ==============================================
METRICS_ENABLED=true
TRACING_ENABLED=false

# ==============================================
# RATE LIMITING
# ==============================================
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ==============================================
# SERVICE DISCOVERY & REGISTRY
# ==============================================
SERVICE_HEALTH_CHECK_INTERVAL=30000
SERVICE_HEALTH_CHECK_TIMEOUT=5000

# ==============================================
# NOTES
# ==============================================
# - Each service can override these values in their own .env files
# - Service-specific .env files take precedence over this shared configuration
# - Always use environment-specific values in production
# - Keep sensitive data in service-specific .env files for better security isolation
