# API Gateway Configuration
PORT=3000
NODE_ENV=development

# Service Discovery & Registry
SERVICE_REGISTRY_CONFIG_PATH=./config/services.json
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:4200
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Proxy Configuration
PROXY_TIMEOUT=30000
MAX_REDIRECTS=5

# Security Headers
HELMET_ENABLED=true

# Service URLs (for service registry)
AUTH_SERVICE_URL=http://localhost:3200
RBAC_CORE_URL=http://localhost:3100
AUDIT_LOG_SERVICE_URL=http://localhost:3300

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
