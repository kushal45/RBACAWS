# Audit Log Service Configuration
PORT=3300
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_database_name
DATABASE_SCHEMA=audit
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true

# Audit Configuration
AUDIT_RETENTION_DAYS=365
AUDIT_BATCH_SIZE=1000
AUDIT_FLUSH_INTERVAL=5000
MAX_AUDIT_QUEUE_SIZE=10000

# Log Storage
LOG_STORAGE_TYPE=database
LOG_COMPRESSION_ENABLED=true
LOG_ENCRYPTION_ENABLED=false

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true

# Rate Limiting
AUDIT_THROTTLE_TTL=60
AUDIT_THROTTLE_LIMIT=200

# Logging
LOG_LEVEL=info
LOG_AUDIT_OPERATIONS=false
LOG_FORMAT=json

# Performance
ASYNC_LOGGING=true
BUFFER_SIZE=1024
FLUSH_ON_EXIT=true

# Data Classification
SENSITIVE_FIELDS=password,secret,token,key
MASK_SENSITIVE_DATA=true
SANITIZE_LOGS=true

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# Integration
NOTIFICATION_ENABLED=false
ALERT_ON_SECURITY_EVENTS=true
WEBHOOK_URL=your_webhook_url

# Cache Configuration (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_AUDIT_DB=3

# Search & Analytics
SEARCH_ENABLED=true
INDEXING_ENABLED=true
ANALYTICS_ENABLED=true

# Compliance
COMPLIANCE_MODE=standard
GDPR_ENABLED=true
DATA_ANONYMIZATION_ENABLED=true

# Background Jobs
CLEANUP_OLD_LOGS_INTERVAL=86400000
ARCHIVE_LOGS_INTERVAL=604800000
STATISTICS_UPDATE_INTERVAL=3600000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Export Configuration
EXPORT_FORMATS=json,csv
MAX_EXPORT_RECORDS=50000
EXPORT_ENCRYPTION_ENABLED=true
