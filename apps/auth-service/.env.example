# Auth Service Configuration
PORT=3200
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_database_name
DATABASE_SCHEMA=auth
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_ALGORITHM=HS256
JWT_ISSUER=rbac-auth-service

# Refresh Token Configuration - CHANGE THESE IN PRODUCTION!
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-in-production
REFRESH_TOKEN_EXPIRES_IN=30d

# Password Security
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Session Configuration - CHANGE THIS IN PRODUCTION!
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=3600000

# Rate Limiting (Auth specific)
AUTH_THROTTLE_TTL=900
AUTH_THROTTLE_LIMIT=5
LOGIN_THROTTLE_TTL=300
LOGIN_THROTTLE_LIMIT=3

# Logging
LOG_LEVEL=debug
LOG_AUTH_ATTEMPTS=true

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true

# Redis Configuration (for auth sessions/blacklist)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_AUTH_DB=1

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
ACCOUNT_LOCKOUT_ENABLED=true

# Two-Factor Authentication (Future)
# TOTP_SECRET=your_totp_secret
# TOTP_ENABLED=false

# OAuth2/OIDC Integration (Future)
# OAUTH_CLIENT_ID=your_oauth_client_id
# OAUTH_CLIENT_SECRET=your_oauth_client_secret
# OAUTH_ISSUER_URL=https://your-oauth-provider.com
# OAUTH_CALLBACK_URL=http://localhost:3200/auth/callback
