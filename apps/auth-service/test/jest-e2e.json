{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@lib/common(|/.*)$": "<rootDir>/../../../libs/common/src/$1"
  },
  "testTimeout": 30000,
  "detectOpenHandles": true,
  "forceExit": true,
  "collectCoverageFrom": ["../src/**/*.(t|j)s", "!../src/**/*.spec.ts", "!../src/**/*.interface.ts"]
}
