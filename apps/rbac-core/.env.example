# RBAC Core Service Configuration
PORT=3100
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=your_db_username
DATABASE_PASSWORD=your_db_password
DATABASE_NAME=your_database_name
DATABASE_SCHEMA=rbac
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true

# Authorization Configuration
DEFAULT_TENANT_ID=default
SUPER_ADMIN_ROLE=super-admin
SYSTEM_USER_ID=system

# Policy Configuration
POLICY_CACHE_TTL=3600
POLICY_EVALUATION_TIMEOUT=5000
PERMISSION_INHERITANCE_ENABLED=true

# Tenant Configuration
MULTI_TENANT_ENABLED=true
TENANT_ISOLATION_STRICT=true
DEFAULT_TENANT_NAME=Default Organization

# Cache Configuration (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_RBAC_DB=2
CACHE_TTL=1800

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true

# Rate Limiting
RBAC_THROTTLE_TTL=60
RBAC_THROTTLE_LIMIT=100

# Logging
LOG_LEVEL=debug
LOG_POLICY_EVALUATIONS=true
LOG_PERMISSION_CHECKS=true

# Performance
MAX_POLICY_DEPTH=10
MAX_ROLE_HIERARCHY_DEPTH=5
BULK_OPERATION_BATCH_SIZE=100

# Data Validation
VALIDATE_RESOURCE_EXISTENCE=true
ENFORCE_UNIQUE_RESOURCE_NAMES=true

# Audit Integration
AUDIT_SERVICE_URL=http://localhost:3300
AUDIT_ENABLED=true
AUDIT_POLICY_CHANGES=true
AUDIT_PERMISSION_GRANTS=true

# Background Jobs
CLEANUP_EXPIRED_SESSIONS_INTERVAL=3600000
POLICY_CACHE_REFRESH_INTERVAL=1800000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
