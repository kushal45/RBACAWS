{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rbacaws.com/schemas/route-mapping.schema.json",
  "title": "Route Mapping Configuration",
  "description": "Schema for dynamic route mapping configuration in RBAC AWS API Gateway",
  "type": "object",
  "required": ["version", "services", "routeMappings"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Configuration version following semver"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "lastUpdated": { "type": "string", "format": "date-time" },
        "environment": {
          "type": "string",
          "enum": ["development", "testing", "staging", "production"]
        }
      }
    },
    "defaults": {
      "type": "object",
      "properties": {
        "timeout": { "type": "integer", "minimum": 1000, "maximum": 300000 },
        "retries": { "type": "integer", "minimum": 0, "maximum": 10 },
        "healthCheckPath": { "type": "string", "pattern": "^/" },
        "loadBalancing": {
          "type": "string",
          "enum": ["round-robin", "least-connections", "weighted"]
        }
      }
    },
    "services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "host", "port"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
            "description": "Service name (kebab-case)"
          },
          "description": { "type": "string" },
          "host": { "type": "string" },
          "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
          "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
          "health": { "type": "string", "pattern": "^/" },
          "priority": { "type": "integer", "minimum": 0, "maximum": 100 },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "metadata": {
            "type": "object",
            "properties": {
              "team": { "type": "string" },
              "maintainer": { "type": "string", "format": "email" }
            }
          }
        }
      }
    },
    "routeMappings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "pattern", "service"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
            "description": "Unique route mapping identifier"
          },
          "description": { "type": "string" },
          "pattern": { "type": "string" },
          "patternType": {
            "type": "string",
            "enum": ["regex", "glob", "exact"],
            "default": "regex"
          },
          "service": { "type": "string" },
          "priority": { "type": "integer", "minimum": 0, "maximum": 200 },
          "methods": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS", "HEAD"]
            }
          },
          "transformations": {
            "type": "object",
            "properties": {
              "stripPrefix": { "type": "boolean" },
              "rewrite": { "type": "string" },
              "addHeaders": {
                "type": "object",
                "patternProperties": {
                  "^[A-Za-z][A-Za-z0-9-]*$": { "type": "string" }
                }
              }
            }
          },
          "security": {
            "type": "object",
            "properties": {
              "requireAuth": { "type": "boolean" },
              "permissions": {
                "type": "array",
                "items": { "type": "string" }
              },
              "rateLimiting": {
                "type": "object",
                "properties": {
                  "enabled": { "type": "boolean" },
                  "requests": { "type": "integer", "minimum": 1 },
                  "window": { "type": "integer", "minimum": 1000 }
                }
              }
            }
          },
          "monitoring": {
            "type": "object",
            "properties": {
              "tracing": { "type": "boolean" },
              "metrics": { "type": "boolean" },
              "logging": { "type": "string", "enum": ["debug", "info", "warn", "error"] }
            }
          }
        }
      }
    },
    "loadBalancing": {
      "type": "object",
      "properties": {
        "strategy": { "type": "string", "enum": ["round-robin", "least-connections", "weighted"] },
        "healthCheckInterval": { "type": "integer", "minimum": 5000 },
        "failoverEnabled": { "type": "boolean" },
        "circuitBreaker": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "failureThreshold": { "type": "integer", "minimum": 1 },
            "resetTimeout": { "type": "integer", "minimum": 10000 }
          }
        }
      }
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "metricsEnabled": { "type": "boolean" },
        "tracingEnabled": { "type": "boolean" },
        "logLevel": { "type": "string", "enum": ["debug", "info", "warn", "error"] },
        "healthCheckEnabled": { "type": "boolean" }
      }
    }
  }
}
