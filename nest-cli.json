{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "monorepo": true,
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "audit-log-service": {
      "type": "application",
      "root": "apps/audit-log-service",
      "entryFile": "main",
      "sourceRoot": "apps/audit-log-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/audit-log-service/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "rbac-core": {
      "type": "application",
      "root": "apps/rbac-core",
      "entryFile": "main",
      "sourceRoot": "apps/rbac-core/src",
      "compilerOptions": {
        "tsConfigPath": "apps/rbac-core/tsconfig.app.json"
      }
    }
  }
}